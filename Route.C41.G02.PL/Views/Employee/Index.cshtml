@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center pb-4">All Employees</h1>

<a asp-controller="Employee" asp-action="Create" class="btn btn-success mb-4">Create New Employee</a>

@if (Model.Count() > 0)
{
     <div class="table-responsive">
         <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(e => e.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(e => e.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(e => e.Salary)</th>
                    <th scope="col">@Html.DisplayNameFor(e => e.IsActive)</th>
                    @* <th scope="col">@Html.DisplayNameFor(e => e.PhoneNumber)</th> *@
                    <th scope="col">@Html.DisplayNameFor(e => e.Gender)</th>
                    @* <th scope="col">@Html.DisplayNameFor(e => e.HiringDate)</th> *@
                    <th scope="col">@Html.DisplayNameFor(e => e.Email)</th>
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
             <tbody>
                 @foreach (var Employee in Model)
                 {
                     <tr>
                        <td>@Employee.Name</td>
                        <td>@Employee.Age</td>
                        <td>@Employee.Salary</td>
                        <td>@Employee.IsActive</td>
                        <td>@Employee.Gender</td>
                        <td>@Employee.Email</td>
                        <td><a asp-controller="Department" asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details</a></td>
                        <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-success"> <i class="fas fa-edit"></i> Update</a></td>
                        <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a></td>
                     </tr>
                 }
             </tbody>
        </table>
     </div>
}
else
{
    <div class="alert alert-warning">
        No Employee Creation
    </div>
}
